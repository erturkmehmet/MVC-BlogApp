@model IEnumerable<MyBlog.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>
<hr/>
<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create",null,new {@class="btn btn-primary" })
</p>
<hr/>
@if (TempData["Blog"]!=null)
{
    var blog = (MyBlog.Models.Blog)TempData["Blog"];
    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span> @blog.Tittle</strong> Kayıt Edildi.
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tittle)
        </th>  
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th style="width:160px"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tittle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddDate)
        </td>
        <td>
            @if (item.Confirmation)
            {
                <label class="label label-success">Onaylı</label>
            }
            else
            {
                <label class="label label-danger">Onay Bekliyor</label>
            }
            
        </td>
        <td>
            @if (item.HomePage)
            {
                <label class="label label-success">Anasayfa</label>
            }
            else
            {
                <label class="label label-danger">Anasayfa Değil</label>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class="btn btn-warning btn-xs"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
